<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomClothesTest">

    <EditText
        android:id="@+id/shirtsInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter you shirt here" />

    <Button
        android:id="@+id/addShirts"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add Shirt to Wardbrobe"
        android:onClick="buttonClick"
        android:layout_below="@id/shirtsInput"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"
        android:layout_below="@id/addShirts"/>




</RelativeLayout>